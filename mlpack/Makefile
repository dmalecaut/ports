include ../config.mk

PROJECT := mlpack
ROOTDIR := mlpack
SRCDIR  := mlpack

MODULES != printf '%s;' $(LIBS)

INSTALLCMD := cmake --install $(BUILDDIR)
BUILDCMD   := cmake --build $(BUILDDIR)
CONFIGCMD  := \
	cmake -Wno-dev -G$(GENERATOR) -B$(BUILDDIR) -S$(SRCDIR) \
		-DCMAKE_PREFIX_PATH="$(MODULES)" \
		-DCMAKE_INSTALL_PREFIX=$(INSTALLDIR) \
		-DCMAKE_BUILD_TYPE=$(BUILDTYPE) \
		-DBUILD_TESTS=OFF \
		-DDISABLE_DOWNLOADS=OFF \
		-DDOWNLOAD_ENSMHALLEN=OFF \
		-DDOWNLOAD_STB_IMAGE=OFF \
		-DBUILD_JULIA_BINDINGS=OFF \
		-DBUILD_GO_BINDINGS=OFF \
		-DBUILD_PYTHON_BINDINGS=OFF \
		-DBUILD_R_BINDINGS=OFF \
		-DUSE_OPENMP=OFF \

include ../build.mk
